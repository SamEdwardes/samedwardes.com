---
import GitHubIcon from "./GitHubIcon.astro";
import ExternalLinkIcon from "./ExternalLinkIcon.astro";
const navItems = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
];
const rightNavItems = [
  { href: "https://github.com/SamEdwardes/samedwardes.com", label: "GitHub" },
];
const currentUrl = Astro.url;
---

<nav
  class:list={[
    "bg-primary border-2 border-gray-900 opacity-90",
    "h-16 px-8",
    "grid grid-cols-2",
    "rounded-2xl shadow-lg",
  ]}
>
  <!-- Col 1: Nav items -->
  <div class="flex items-center">
    {
      navItems.map((item) => (
        <a
          class:list={[
            "text-white hover:text-slate-200 rounded-md px-3 py-2 text-xl font-bold",
            { "text-yellow-400 drop-shadow-2xl underline underline-offset-8 decoration-4": `/${currentUrl.pathname.split("/")[1]}` == item.href }
          ]}
          href={`${item.href}`}
        >
          {item.label}
        </a>
      ))
    }
  </div>
  <!-- Col 2: Links on right -->
  <div class="flex gap-4 items-center justify-end">
    <a
      class="text-white hover:text-slate-200 rounded-md px-3 py-2 text-xl font-bold"
      href="https://github.com/samedwardes.com"
      target="_blank"
    >
      <div class="flex flex-row gap-2d  ">
        <div>GitHub</div>
        <ExternalLinkIcon />
      </div>
    </a>
  </div>
</nav>
