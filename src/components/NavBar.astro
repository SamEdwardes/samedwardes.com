---
const navItems = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/links", label: "Links" },
  { href: "/homelab", label: "Homelab" },
  { href: "/about", label: "About" },
];
const currentUrl = Astro.url;
---

<nav
  class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-4 fixed z-[99] top-0 left-0 right-0"
>
  <div
    class:list={[
      "navbar bg-primary rounded-2xl shadow-lg border-2 border-gray-900 opacity-90 h-16",
    ]}
  >
    <div class="navbar-start">
      <!-- Mobile nav -->
      <div class="dropdown text-white">
        <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path></svg
          >
        </div>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-primary rounded-box w-52"
        >
          {
            navItems.map((item) => (
              <li>
                <a
                  class:list={[
                    "text-white hover:text-slate-200 rounded-md px-3 py-2 text-xl font-bold",
                    {
                      "text-yellow-400 drop-shadow-2xl underline underline-offset-8 decoration-4":
                        `/${currentUrl.pathname.split("/")[1]}` == item.href &&
                        item.label != "samedwardes.com",
                    },
                  ]}
                  href={`${item.href}`}
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <a class="font-bold text-xl text-white btn btn-ghost" href="/"
        >samedwardes.com</a
      >
    </div>
    <!-- Desktop nav -->
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal px-1">
        {
          navItems.map((item) => (
            <li>
              <a
                class:list={[
                  "text-white hover:text-slate-200 rounded-md px-3 py-2 text-xl font-bold",
                  {
                    "text-yellow-400 drop-shadow-2xl underline underline-offset-8 decoration-4":
                      `/${currentUrl.pathname.split("/")[1]}` == item.href &&
                      item.label != "samedwardes.com",
                  },
                ]}
                href={`${item.href}`}
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="navbar-end">
      <!-- GitHub Icon -->
      <a
        href="https://github.com/SamEdwardes/samedwardes.com"
        target="_blank"
        class="text-gray-400 hover:text-gray-500"
      >
        <span class="sr-only">GitHub</span>
        <svg
          class="h-10 w-10"
          fill="white"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <title>
            GitHub repo for samedwardes.com
            (https://github.com/SamEdwardes/samedwardes.com)
          </title>
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
    </div>
  </div>
</nav>
