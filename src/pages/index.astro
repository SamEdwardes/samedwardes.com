---
import BrutalLink from "../components/BrutalLink.astro";
import BrutalCard from "../components/BrutalCard.astro";
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout metaTitle="Home">
  <!-- Homepage hero -->
  <BrutalCard class="p-4 bg-yellow-400 w-full">
    <div class:list={["flex flex-col gap-4", "md:flex-row md:gap-12"]}>
      <!-- My Name -->
      <div>
        <div class="text-4xl md:text-8xl font-bold">Sam</div>
        <div class="text-4xl md:text-8xl font-bold">Edwardes</div>
      </div>
      <!-- My stuff -->
      <div>
        <div class="text-lg text-white font-bold">
          <div>
            Solutions Engineer at
            <BrutalLink
              href="https://posit.co"
              target="_blank"
              >Posit PBC</BrutalLink
            >
          </div>
          <div>Python</div>
          <div>R</div>
          <div>Data Science</div>
          <div>Web</div>
        </div>
      </div>
    </div>
  </BrutalCard>
</DefaultLayout>
